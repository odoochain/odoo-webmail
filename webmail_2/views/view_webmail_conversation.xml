<odoo>

    <record id="act_conversation_2_mail" model="ir.actions.act_window">
        <field name="name">Mails</field>
        <field name="res_model">webmail.mail</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('conversation_id', '=', active_id)]</field>
    </record>

    <record id="view_webmail_conversation_search" model="ir.ui.view">
        <field name="model">webmail.conversation</field>
        <field name="arch" type="xml">
            <search>
                <field name="display_subject" />
                <field name="account_id" />
                <field name="contact_ids" />
            </search>
        </field>
    </record>

    <record id="view_webmail_conversation_tree" model="ir.ui.view">
        <field name="model">webmail.conversation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="contact_ids" widget="many2many_tags" />
                <field name="display_subject" />
                <field name="display_date" />
                <field
                    name="date_first_mail"
                    attrs="{'invisible': [('mail_qty', '&lt;', 2)]}"
                    optional="hide"
                />
                <field name="date_last_mail" optional="hide" />
                <field name="mail_qty" />
                <field name="account_id" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="view_webmail_conversation_form" model="ir.ui.view">
        <field name="model">webmail.conversation</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            class="oe_stat_button"
                            name="%(act_conversation_2_mail)d"
                            type="action"
                            icon="fa-pencil-square-o"
                        >
                            <field name="mail_qty" widget="statinfo" />
                        </button>
                    </div>
                    <group col="4">
                        <group>
                            <field name="display_subject" />
                        </group>
                        <group>
                            <field
                                name="date_first_mail"
                                attrs="{'invisible': [('mail_qty', '&lt;', 2)]}"
                            />
                            <field name="date_last_mail" />
                        </group>
                    </group>
                    <group>
                        <field name="mail_ids" nolabel="1" colspan="2">
                            <tree>
                                <field name="technical_body" />
                                <field name="display_date" />
                                <field name="display_subject" optional="hide" />
                                <field name="folder_id" optional="hide" />
                                <field name="technical_message_id" optional="hide" />
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_webmail_conversation" model="ir.actions.act_window">
        <field name="name">Conversations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">webmail.conversation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_webmail_conversation"
        name="Conversations"
        parent="menu_conversation"
        action="action_webmail_conversation"
        sequence="5"
    />

</odoo>
